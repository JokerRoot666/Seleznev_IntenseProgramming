Процедура ПоказатьПользователей()
	Пользователи = Новый Массив();
	
	Пользователь = Новый Структура();
	Пользователь.Вставить("Фамилия", "Иванов");
	Пользователь.Вставить("Имя", "Иван");
	Пользователь.Вставить("Отчество", "Иванович");
	Пользователь.Вставить("Возраст", "25");
	
	Пользователи.Добавить(Пользователь);

	Для Каждого Пользователь из Пользователи Цикл
		Стр = СтрШаблон(НСтр("ru='%1 %2.%3. - %4 лет'"),
			Пользователь.Фамилия, Лев(Пользователь.Имя, 1), Лев(Пользователь.Отчество, 1), Пользователь.Возраст);
		Сообщить(Стр);
	КонецЦикла;
КонецПроцедуры

